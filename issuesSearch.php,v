  	$patterns = array ("'([\r\n])[\s]+'",                // Strip out white space
			 "/\s/",
			   "/'/",
			   "/\"/");
	$replacement = array ("\\n",
			 " ",
			 "'",
			 "");
	$searchType="";
	$searchText="";
  
  $searchResults = array();
  if (isset($_POST['action']) && ($_POST['action'] == 'processSearch')) {
		global $searchType, $searchText;
		$searchType = mysql_real_escape_string($_POST["searchType"]);
		$searchText = preg_replace($patterns,$replacement,$_POST["searchText"]);
		$searchText = mysql_real_escape_string($searchText);

                 if($searchType == "keywords") {
			$result_query = tep_db_query("SELECT ID FROM issues WHERE MATCH (Title,Editors) AGAINST ('" . $searchText . "' IN BOOLEAN MODE)");
			while($result = tep_db_fetch_array($result_query)) {
				$searchResults[$result['ID']] = array();
			}
			$result_query = tep_db_query("SELECT ID,IssueID FROM articles WHERE MATCH (Title,Author,Abstract) AGAINST ('" . $searchText . "' IN BOOLEAN MODE)");
			while($result = tep_db_fetch_array($result_query)) {
				if(!@@$searchResults[$result['IssueID']]) $searchResults[$result['IssueID']] = array();
				array_push($searchResults[$result['IssueID']],$result['ID']);
			}				
		}
		else if($searchType == "issueTitle") {
			$result_query = tep_db_query("SELECT ID FROM issues WHERE MATCH (Title) AGAINST ('" . $searchText . "' IN BOOLEAN MODE)");
			while($result = tep_db_fetch_array($result_query)) {
				$searchResults[$result['ID']] = array();
			}
		}
		else if($searchType == "AuthorsEditors") {
			$result_query = tep_db_query("SELECT ID FROM issues WHERE MATCH (Editors) AGAINST ('" . $searchText . "' IN BOOLEAN MODE)");
			while($result = tep_db_fetch_array($result_query)) {
				$searchResults[$result['ID']] = array();
			}
			$result_query = tep_db_query("SELECT ID,IssueID FROM articles WHERE MATCH (Author) AGAINST ('" . $searchText . "' IN BOOLEAN MODE)");
			while($result = tep_db_fetch_array($result_query)) {
				if(!@@$searchResults[$result['IssueID']]) $searchResults[$result['IssueID']] = array();
				array_push($searchResults[$result['IssueID']],$result['ID']);
			}				
		}		
		else {
			$result_query = tep_db_query("SELECT ID,IssueID FROM articles WHERE MATCH (" . $searchType . ") AGAINST ('" . $searchText . "' IN BOOLEAN MODE)");
			while($result = tep_db_fetch_array($result_query)) {
				if(!@@$searchResults[$result['IssueID']]) $searchResults[$result['IssueID']] = array();
				array_push($searchResults[$result['IssueID']],$result['ID']);
			}
		}	
		$searchText = stripslashes($_POST["searchText"]);	
	}
	
